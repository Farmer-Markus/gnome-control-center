<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="CcTimeRow" parent="AdwActionRow">
    <style>
      <class name="combo" />
    </style>
    <property name="activatable">True</property>

    <child>
      <object class="GtkLabel" id="current">
        <property name="valign">center</property>
      </object>
    </child>

    <child>
      <object class="GtkBox" id="popover_box">
        <property name="valign">center</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">clock-alt-symbolic</property>
            <property name="accessible-role">presentation</property>
            <style>
              <class name="dropdown-arrow"/>
            </style>
          </object>
        </child>

        <child>
          <object class="GtkPopover" id="popover">
            <signal name="notify::visible" handler="notify_popover_visible_cb" swapped="true" />
            <property name="child">
              <object class="CcTimeEditor" id="time_editor"></object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>